ems !== ''){\n        // this.$emit('이벤트 이름', 인자1, 인자2, ...);\n        // this.$emit('addtodoItems', this.newtodoItems);\n        this.$store.commit('addOneItem', this.newtodoItems);\n        this.clearInput();\n      }else if(!this.showModal){\n        this.showModal = true;\n      }\n    },\n    clearInput() {\n      //저장후 화면 값 초기화\n      this.newtodoItems = '';\n    },\n  },\n  components : {\n    alertModal\n  }\n}\n</script>\n\n<style scoped>\ninput:focus {\n  outline: none;\n}\n.inputBox {\n  background: white;\n  height : 50px;\n  line-height: 50px;\n  border-radius: 5px;\n}\n.inputBox input {\n  border-style: none;\n  font-size: 0.9rem;\n   height: 40px;\n   width: 80%;\n}\n.addContainer {\n  float : right;\n  background: linear-gradient(to right, #6478FB, #8763FB);\n  display: block;\n  width: 3rem;\n  height: 50px;\n  border-radius: 0 5px 5px 0;\n}\n.addBtn {\n  color : white;\n  vertical-align: middle;\n}\n.closeModalBtn {\n  color : #42b983;\n  float : right;\n  height: 25px;\n}\n</style>"]},"metadata":{},"sourceType":"module"}